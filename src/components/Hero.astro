---
import { H1Title } from '../components/ui/H1Title';
import { IconTiktok } from '../components/icons/IconTiktok';
import { IconInstagram } from '../components/icons/IconInstagram';
import { IconFacebook } from '../components/icons/IconFacebook';
import { IconThreads } from '../components/icons/IconThreads';

import avatarLogo from '../assets/art-kefren/avatar-kefren.webp';
import imgHeroBackground from '../assets/background/hero-background.webp';
---

<section class="w-full h-screen flex flex-col justify-center items-center relative bg-blue-950 shadow-blue-800 shadow-md overflow-hidden">
  <img src={imgHeroBackground.src} class="w-full h-full absolute top-0 left-0 object-cover  bg-no-repeat" alt="image-fondo">
  <div
  class="pointer-events-none absolute left-0 right-0 bottom-0 h-1/2 w-full z-0"
  style={{
    background:
      "linear-gradient(0deg, rgba(0,0,0,0.32) 0%, rgba(0,0,0,0.12) 40%, rgba(0,0,0,0) 100%)",
  }}
/>
<div class="absolute top-0 left-0 w-full h-full bg-black opacity-70 z-0"></div>

  <header class="absolute top-0 w-full h-auto py-6 px-4 sm:px-12 flex justify-between items-center font-family-secondary text-white z-10">
    <img src={avatarLogo.src} class="w-[50px] h-[50px] object-cover rounded-full" alt="logo">
    <nav class="flex justify-between gap-6">
      <a href="#sobre-mi" class="font-semibold hover:text-violet">Sobre mi</a>
      <a href="#artes" class="font-semibold hover:text-violet">Artes</a>
      <a href="#servicios" class="font-semibold hover:text-violet">Servicios</a>
    </nav>
  </header>
  <div class="flex flex-col justify-center items-center z-10">
    <H1Title client:load />
    <div class="flex justify-center gap-8 mt-8">
      <IconTiktok client:load />
      <IconInstagram client:load />
      <IconFacebook client:load />
      <IconThreads client:load />
    </div>
  </div>
</section>